# Top-most EditorConfig file
root = true

# Global defaults
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Indentation
indent_style = space
indent_size = 4

# PHP files
[*.php]
indent_style = space
indent_size = 4
max_line_length = 120

# JSON, YAML, and Config files
[*.{json,yml,yaml,xml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Makefiles use tabs
[Makefile]
indent_style = tab
